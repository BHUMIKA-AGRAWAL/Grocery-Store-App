-- Create GROCERY_INFO table
CREATE TABLE GROCERY_INFO (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    GROCERY_NAME VARCHAR(255) NOT NULL,
    COST_PER_ITEM DECIMAL(10, 2) NOT NULL
);

-- Create GROCERY_AMOUNTS table
CREATE TABLE GROCERYAPP_AMOUNTS (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    ITEMS_AVAILABLE INT NOT NULL,
    TOTAL_COST_OF_ITEMS DECIMAL(10, 2) NOT NULL,
    SOURCE_ID INT, 
    FOREIGN KEY (SOURCE_ID) REFERENCES GROCERY_SOURCE(ID) 

);

-- Create GROCERY_SOURCE table
CREATE TABLE GROCERY_SOURCE (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    STATE_NAME VARCHAR(100) NOT NULL
);

INSERT INTO GROCERY_SOURCE (STATE_NAME) VALUES
