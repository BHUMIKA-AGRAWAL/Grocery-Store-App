CREATE DATABASE IF NOT EXISTS GroceryDB;
 

select * from GROCERY_AMOUNTS;
select * from grocery_info;
select * from GROCERY_SOURCE;


SELECT 
    GROCERY_INFO.ID,
    GROCERY_INFO.GROCERY_NAME,
    GROCERY_INFO.COST_PER_ITEM,
    GROCERYAPP_AMOUNTS.ITEMS_AVAILABLE,
    GROCERYAPP_AMOUNTS.TOTAL_COST_OF_ITEMS,
    GROCERY_SOURCE.STATE_NAME
FROM 
    GROCERY_INFOgrocery_amounts
JOIN 
    GROCERYAPP_AMOUNTS ON GROCERY_INFO.ID = GROCERYAPP_AMOUNTS.ID
JOIN 
    GROCERY_SOURCE ON GROCERYAPP_AMOUNTS.SOURCE_ID = GROCERY_SOURCE.ID;
    
    
    SELECT 
    GROCERY_INFO.ID,
    GROCERY_INFO.GROCERY_NAME,
    GROCERY_INFO.COST_PER_ITEM,
    GROCERYAPP_AMOUNTS.ITEMS_AVAILABLE,
    GROCERYAPP_AMOUNTS.TOTAL_COST_OF_ITEMS
FROM 
    GROCERY_INFO
JOIN 
    GROCERYAPP_AMOUNTS ON GROCERY_INFO.ID = GROCERYAPP_AMOUNTS.ID;
    
CREATE DATABASE grocerydb;
SHOW DATABASES;
